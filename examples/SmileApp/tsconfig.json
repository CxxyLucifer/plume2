{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "jsx": "react-native",
    "experimentalDecorators": true,
    "baseUrl": "./ts",
    "rootDir": "./ts",
    "outDir": "js",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": [
    "js",
    "android",
    "ios",
    "node_modules",
    "react-dom",
    "index.android.js",
    "index.ios.js"
  ]
}